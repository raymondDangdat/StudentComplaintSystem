<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login as:"
            android:textAlignment="center"
            android:padding="10sp"
            android:textSize="25sp"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/btn_deans_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:text="Dean "/>


        <Button
            android:id="@+id/btn_hod_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:text="HoD "/>

        <Button
            android:id="@+id/btn_non_academics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:text="Non Academic Staff "/>
        <Spinner
            android:id="@+id/spinner_faculty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15sp"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:entries="@array/faculty">
        </Spinner>

        <Spinner
            android:id="@+id/spinner_department"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15sp"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:entries="@array/department">
        </Spinner>
        <Spinner
            android:id="@+id/spinner_non_academics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15sp"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:entries="@array/non_academics">
        </Spinner>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Enter Email"
            android:text=""
            android:layout_marginTop="10dp"
            android:ems="10"
            android:padding="10dp"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Enter Password"
            android:text=""
            android:layout_marginTop="10dp"
            android:ems="10"
            android:padding="10dp"
            />


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:text="Login "/>

    </LinearLayout>


</ScrollView>