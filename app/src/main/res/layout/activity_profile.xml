<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/app_bar_layout"
            android:id="@+id/profile_toolbar">
        </include>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pix"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:src="@drawable/images"/>


        <EditText
            android:id="@+id/edt_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="15sp"
            android:background="@drawable/edit_rounded"
            android:inputType="textPersonName"
            />
        <EditText
            android:id="@+id/edt_mat_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Matriculation Number"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="15sp"
            android:background="@drawable/edit_rounded"
            android:inputType="textWebEmailAddress"
            />
        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="15sp"
            android:background="@drawable/edit_rounded"
            android:inputType="textWebEmailAddress"
            />
        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="phone number"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:background="@drawable/edit_rounded"
            android:inputType="phone"
            />


        <EditText
            android:id="@+id/edt_faculty"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Faculty"
            android:inputType="text"
            android:background="@drawable/edit_rounded"
            />
        <EditText
            android:id="@+id/edt_department"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Department"
            android:inputType="text"
            android:background="@drawable/edit_rounded"
            />


        <Button
            android:id="@+id/btn_update_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="15dp"
            android:background="@drawable/rounded_button"
            android:text="Review Details"
            android:textColor="#ffffff"
            android:textStyle="bold"
            />
    </LinearLayout>


</ScrollView>