<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="comq.example.raymond.studentcomplaintsystem">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".StudentHome"
            android:label="@string/title_activity_student_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".LoginActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AdminHome"
            android:label="@string/title_activity_admin_home"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ProfileActivity"
            android:parentActivityName=".StudentHome" />
        <activity
            android:name=".SRegistryComplaint"
            android:parentActivityName=".StudentHome" />
        <activity
            android:name=".AddOfficerActivity"
            android:parentActivityName=".AdminHome" />
        <activity android:name=".ViewStaffActivity" />
        <activity
            android:name=".AregistryComplaints"
            android:parentActivityName=".AdminHome" />
        <activity
            android:name=".AregistryComplaintDetails"
            android:parentActivityName=".AregistryComplaints" />
        <activity
            android:name=".DeansHome"
            android:label="@string/title_activity_deans_home"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".HoDsHome"
            android:label="@string/title_activity_ho_ds_home"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".NonAcademicsHome"
            android:label="@string/title_activity_non_academics_home"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".DisplayDeans"
            android:parentActivityName=".StudentHome" />
        <activity
            android:name=".DisplayHodsActivity"
            android:parentActivityName=".StudentHome" />
        <activity
            android:name=".DisplayNonAcademics"
            android:parentActivityName=".StudentHome" />
        <activity android:name=".SdeanComplaint" />
        <activity
            android:name=".ShodComplaint"
            android:parentActivityName=".DisplayDeans" />
        <activity android:name=".DisplayDepartmentCOmplaints" />
        <activity android:name=".DeansComplaintDetails" />
        <activity android:name=".HodComplaintDetails" />
        <activity android:name=".FoggottenPassword"
            android:parentActivityName=".LoginActivity"/>
    </application>

</manifest>